{
    "name": "phpdocumentor/guides",
    "description": "PHP library to parse guides and generate HTML or LaTeX documents.",
    "keywords": ["rst", "markup", "parser", "restructuredtext", "html", "latex"],
    "homepage": "https://github.com/phpDocumentor/rst-parser",
    "license": "MIT",
    "authors": [
